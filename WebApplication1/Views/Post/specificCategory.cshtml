@model List<post>
@{
    ViewBag.Title = "specificCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<br/>
<br/>
<br/>
@foreach (var item in Model)
{
    if (item.categoryName == @ViewBag.categoryName)
    {


    <div>
        <table width="100%">
            <tr>
                <td width="70%" style=" font-size:18px;">@item.postContent</td>
                <td width="30%"> <img src="@item.photo" width="200" height="200" /> </td>
            </tr>
            <tr>
                <td width="70%" style="font-size:10px; color:#988080"> Catagory: @item.category.categoryName, Time:@item.date, Author: @item.writerUsername </td>
                <td width="30%">
                    @Html.ActionLink("read more ..", "details", new { postId = item.postID })/
                    @if (item.writerUsername == (string)Session["username"])
                    {
                        @Html.ActionLink("delete", "delete", new { postId = item.postID })
                    }
                </td>
            </tr>
            <tr>
                <td>
                    <hr style="height:2px;border-width:0;color:gray;background-color:gray">
                </td>
            </tr>
        </table>
    </div>
    }
}

