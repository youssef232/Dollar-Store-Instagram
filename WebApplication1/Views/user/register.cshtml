            <td>@Html.LabelFor(n => n.confirmPassword)</td>
            <td>@Html.TextBoxFor(n => n.confirmPassword, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(n => n.confirmPassword)</td>
        </tr>
        <tr>
            <td></td>
            <td><input value="register" type="submit" class="btn btn-primary" /></td>
            <td></td>
        </tr>
    </table>
