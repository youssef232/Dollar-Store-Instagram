            <td>@Html.ValidationMessageFor(n => n.lastName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(n => n.username)</td>
            <td>@Html.TextBoxFor(n => n.username, new { @class = "form-control" })</td>
            <td>@Html.ValidationMessageFor(n => n.username)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(n => n.dataOfBirth)</td>
            <td>@Html.TextBoxFor(n => n.dataOfBirth, new { @class = "form-control" })</td>
