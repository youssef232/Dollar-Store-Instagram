@model user
@{
    ViewBag.Title = "Index";
}

<h2>Register</h2>
<br />
<form method="post" enctype="multipart/form-data">

    <div>
        @Html.LabelFor(n => n.firstName)

        @Html.TextBoxFor(n => n.firstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.firstName)
    </div>
    <br />
    <div>
        @Html.LabelFor(n => n.lastName)
        @Html.TextBoxFor(n => n.lastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.lastName)
    </div>
    <br />
    <div>
        @Html.LabelFor(n => n.username)
        @Html.TextBoxFor(n => n.username, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.username)
    </div>
    <br />
    <div>
        @Html.LabelFor(n => n.userPhoto)
        <input type="file" name="img" />
    </div>
    <br/>
    <div>
        @Html.LabelFor(n => n.dateOfBirth)<br />
        <input type="date" name="dateOfBirth" size="40" />
        @Html.ValidationMessageFor(n => n.dateOfBirth)
    </div>

    <br />

    <div>
        @Html.LabelFor(n => n.phone)
        @Html.TextBoxFor(n => n.phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.phone)
    </div>
    <br />
    <div>

        @Html.LabelFor(n => n.email)
        @Html.TextBoxFor(n => n.email, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.email)
    </div>
    <div>
        <br />
        @Html.LabelFor(n => n.password)
        @Html.PasswordFor(n => n.password, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.password)
    </div>
    <br />
    <div>
        @Html.LabelFor(n => n.confirmPassword)
        @Html.PasswordFor(n => n.confirmPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.confirmPassword)
    </div>
    <br />

    <div>

        <input value="register" type="submit" class="btn btn-primary" />

    </div>

</form>

@section scripts{

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}
